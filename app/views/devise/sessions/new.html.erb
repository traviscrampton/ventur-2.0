<div id="form">
  <div class="wrapper_skinny">
    <h2>Log In</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, placeholder: "you.are@awesome.com", autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class: "button button_dark button_block" %>
      </div>
    <% end %>
    
    <p>
      New to ventur? <%= link_to "Sign up", new_user_registration_path %>
      <br>
      <br>
      <%= link_to "Forgot your password?", new_password_path(resource_name) %>
    </p>
  </div>
</div>