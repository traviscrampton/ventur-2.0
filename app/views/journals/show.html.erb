<div id="journal_show">
	<%= image_tag @journal.journal_image.url(:large) %>
	<div class="wrapper">
		<h1>
			<%= @journal.title %>
		</h1>
		<% if current_user == @journal.user %>	
			<%= link_to "edit", edit_journal_path(@journal) %>
			<%= link_to "delete", journal_path(@journal), method: :delete, data: {confirm: "Are you sure you want to delete this Journal?"} %>
		<% end %>
		<p>
			<%= @journal.description %>	
		</p>
		<p>
		<p class="author"><%= link_to @journal.user.first_name+' '+@journal.user.last_name, @journal.user %>
		</p>
		<p class="chapter_count">2 Chapters</p>
		<hr class="hr_short">
		<% if current_user == @journal.user %>	
			<%= link_to "Add a chapter", new_user_registration_path, id: "add_chapter_button" %>
		<% end %>
		</p>
	</div>
</div>