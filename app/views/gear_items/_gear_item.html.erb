<div class="gear_item">
	<p><%= truncate(gear_item.item_name, length: 30) %></p>
	<% if current_user == @gear_list.user %>
		<div class="trash">
			<%= link_to gear_list_gear_item_path(@gear_list, gear_item.id),
				method: :delete do %>
				<i class="fa fa-trash"></i>
			<% end %>
		</div>
	<% else %>
		<div class="trash">
				<i class="fa fa-info-circle"></i>
		</div>
	<% end %>
</div>